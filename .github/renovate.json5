{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    
  ],
  "schedule": [
    "after 11pm every weekday",
    "before 6am every weekday",
    "after 11pm every weekend",
    "before 6am every weekend"
  ],
  "timezone": "Europe/Helsinki",
  "flux": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  }
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>attiolli/k3s-cluster//.github/renovate/commit-message.json",
    "github>attiolli/k3s-cluster//.github/renovate/pr-labels.json"
  ],
  "schedule": [
    "after 11pm every weekday",
    "before 6am every weekday",
    "after 11pm every weekend",
    "before 6am every weekend"
  ],
  "timezone": "Europe/Helsinki",
  "prHourlyLimit": 5,
  "flux": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "helm-values": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "kubernetes": {
    "fileMatch": ["cluster/.+\\.ya?ml$"]
  },
  "packageRules": [
    {
      description: "Auto merge containers",
      matchDatasources: ["docker"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["minor","patch", "digest"]
    },
    {
      matchDatasources: ["helm"],
      automerge: true,
      automergeType: "branch",
      ignoreTests: true,
      matchUpdateTypes: ["patch"]
   },
    {
      matchDatasources: ["docker"],
      automerge: false,
      automergeType: "branch",
      ignoreTests: true,
      matchPackageNames: [
        "ghcr.io/k8snetworkplumbingwg/multus-cni"
      ]
    },
    {
      matchDatasources: ["docker"],
      automerge: false,
      automergeType: "branch",
      ignoreTests: true,
      matchPackageNames: [
        "docker.io/rancher/hardened-cni-plugins"
      ]
    },
    {
      matchDatasources: ["docker"],
      automerge: false,
      automergeType: "branch",
      ignoreTests: true,
      matchPackageNames: [
        "ghcr.io/koenkk/zigbee2mqtt"
      ]
    },
    {
      matchDatasources: ["docker"],
      automerge: false,
      automergeType: "branch",
      ignoreTests: true,
      matchPackageNames: [
        "ghcr.io/home-assistant/home-assistant"
      ]
    }
  ]
}
